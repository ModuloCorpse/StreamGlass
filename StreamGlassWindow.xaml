<Window x:Class="StreamGlass.StreamGlassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:streamglass="clr-namespace:StreamGlass"
        mc:Ignorable="d"
        Title="StreamGlass" Height="523" Width="866" Icon="/Assets/stream-glass-logo.ico">
    <StackPanel>
        <Menu>
            <MenuItem Header="_File" />
            <MenuItem Header="_Settings" Click="SettingsToolStripMenuItem_Click"/>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="370">
                <StackPanel Name="ChatPanelHeader" Width="370" Height="31">
                    <ComboBox Margin="5,5,0,0" Name="ChatModeComboBox" Height="26" Width="120" SelectionChanged="ChatModeComboBox_SelectionChanged"/>
                </StackPanel>
                <streamglass:StreamChat x:Name="StreamChatPanel" Height="435"/>
            </StackPanel>
            <StackPanel Width="500">
                <ComboBox Margin="5,5,0,0" Name="CommandProfilesComboBox" Height="26" Width="120" SelectionChanged="CommandProfilesComboBox_SelectionChanged"/>
            </StackPanel>
            <Canvas Width="16" Background="Red"></Canvas>
        </StackPanel>
        <Canvas Height="23" Background="Red"></Canvas>
    </StackPanel>
</Window>
