<ui:Dialog x:Class="StreamGlass.Profile.ProfilesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:StreamGlass.UI"
        mc:Ignorable="d"
        Title="ProfileEditor"
        d:DesignHeight="364"
        d:DesignWidth="454"
        Height="364"
        Width="454"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ShowInAero="False">
    <ui:Border BrushPaletteKey="dialog_border" BorderThickness="2">
        <ui:StackPanel Width="450">
            <ui:StackPanel>
                <ui:GroupBox x:Name="ProfileGroupBox" TranslationKey="section_profiles" Header="Profiles">
                    <ui:EditableList x:Name="ProfileList" Height="304" />
                </ui:GroupBox>
            </ui:StackPanel>
            <ui:StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Height="35" Width="450">
                <ui:Button TranslationKey="close_button" Margin="5,0,0,0" Content="Close" Height="25" Width="75" Canvas.Left="415" Canvas.Top="5" Click="CloseButton_Click"/>
            </ui:StackPanel>
        </ui:StackPanel>
    </ui:Border>
</ui:Dialog>
