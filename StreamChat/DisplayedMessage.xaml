<ui:UserControl x:Class="StreamGlass.StreamChat.DisplayedMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:StreamFeedstock.Controls;assembly=StreamFeedstock"
             mc:Ignorable="d"
             d:DesignWidth="150"
             d:DesignHeight="24">
    <ui:Canvas x:Name="MessageContentCanvas" Grid.Column="1">
        <ui:TextBox x:Name="MessageContent" Canvas.ZIndex="1" IsReadOnly="True" Text="Hello World!" TextWrapping="Wrap" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="14"/>
        <ui:Canvas x:Name="EmoteLayer" Canvas.ZIndex="2"/>
    </ui:Canvas>
</ui:UserControl>
